#try to use mod_rewrite
<IfModule mod_rewrite.c>
	RewriteEngine On
	#RewriteBase /
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule . /index.php [L]
</IfModule>

#else use the ErrorDocument

<IfModule !mod_rewrite.c>
	ErrorDocument "404"	./index.php
</IfModule>
